@model IEnumerable<project.ViewModels.ProductVM>

<div class="aside">
    <h3 class="aside-title">Top selling</h3>
    @{
        int count = 0;
    }
    @foreach (var item in Model)
    {
        <div class="product-widget">
            <div class="product-img">
                <img src="@item.imgUrl" alt="">
            </div>
            <div class="product-body">
                <p class="product-category">@item.CategoryName</p>
                <h3 class="product-name"><a asp-action="Product" asp-controller="Products" asp-route-id="@item.Id">@item.Name</a></h3>
                <h4 class="product-price">@item.Price.ToString("N0") VND<del class="product-old-price">@($"{(item.Price + (item.Price * 30) / 100).ToString("N0")} VND")</del></h4>
            </div>
        </div>
        count++;
        @if (count >= 3)
        {
            break;
        }
    }
</div>